
@{
    ViewData["Title"] = "Liste finitions";
}
<section class="section">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="page-heading layout-horizontal">
                            <div class="header-top ">
                                <div class="container">
                                    <div class="header-top-right">
                                        <div class="card-header">
                                            <h4 class="card-title">Tableau</h4>
                                        </div>
                                     
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="">
                            <div class="table-responsive mb-4" style="margin: 2%;">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>% </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @Model.Data)
                                        {
                                            <tr>
                                                <td>@item.NomFinition</td>
                                                <td>@item.AugmentationPourcentage</td>
                                               
                                                <td>
                                                    <a class="btn icon icon-left btn-warning"
                                                    asp-action="UpdateFinition" asp-controller="Admin" asp-route-id=@item.Idtypefinition
                                                    ><i class="bi bi-pen-fill"></i>Update</a>
    
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <nav aria-label="Page navigation example">
                                <ul class="pagination pagination-primary justify-content-end">
                                    @if(Model.CurrentPage>1){
                                         <li class="page-item">
                                        <a class="page-link"  tabindex="-1" aria-disabled="true"  asp-action="ListFinitions" asp-controller="Admin" asp-route-pageslide=@(Model.CurrentPage-1)><span
                                                aria-hidden="true"><i class="bi bi-chevron-left"></i></span></a>
                                    </li>
                                    }
                                    @for(int i=0;i<@Model.TotalPage;i++){
                                        if(i+1==Model.CurrentPage){
                                            <li class="page-item active"><a class="page-link" asp-action="ListFinitions" asp-controller="Admin" asp-route-pageslide=@(i+1)>@(i+1)</a></li>
                                        }else{
                                             <li class="page-item"><a class="page-link" asp-action="ListFinitions" asp-controller="Admin" asp-route-pageslide=@(i+1)>@(i+1)</a></li>
                                        }
                                    }
                                    @if(Model.CurrentPage<Model.TotalPage){
                                        <li class="page-item">
                                        <a class="page-link" 
                                        asp-action="ListFinitions" asp-controller="Admin" asp-route-pageslide=@(Model.CurrentPage+1)
                                        >
                                            <span aria-hidden="true"><i class="bi bi-chevron-right"></i></span>
                                        </a>
                                    </li>
                                    }
                                    
                                </ul>
                            </nav>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>