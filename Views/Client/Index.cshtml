@{
    ViewData["Title"] = "Devis";
}
<div class="card">
    <div class="card-header">
        <div class="card-title">Demander un devis : type de maison </div>
    </div>
    <div class="card-content">
        <section class="section">
            <div class="row">
                <nav aria-label="Page navigation example">
                    <ul class="pagination pagination-primary justify-content-end">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" tabindex="-1" aria-disabled="true" asp-action="Index"
                                    asp-controller="Client" asp-route-pageslide=@(Model.CurrentPage-1)><span
                                        aria-hidden="true"><i class="bi bi-chevron-left"></i></span></a>
                            </li>
                        }
                        @for (int i = 0; i < @Model.TotalPage; i++)
                        {
                            if (i + 1 == Model.CurrentPage)
                            {
                                <li class="page-item active"><a class="page-link" asp-action="Index" asp-controller="Client"
                                        asp-route-pageslide=@(i+1)>@(i + 1)</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Client"
                                        asp-route-pageslide=@(i+1)>@(i + 1)</a></li>
                            }
                        }
                        @if (Model.CurrentPage < Model.TotalPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-controller="Client"
                                    asp-route-pageslide=@(Model.CurrentPage+1)>
                                    <span aria-hidden="true"><i class="bi bi-chevron-right"></i></span>
                                </a>
                            </li>
                        }

                    </ul>
                </nav>
            </div>

            <div class="row">
                <div class="col-11 offset-md-1">
                    <div class="pricing">
                        <div class="row align-items-center">
                            <form asp-controller="Client" asp-action="Finitions">
                                @foreach (var type in Model.Data)
                                {
                                    <div class="col-md-4 px-0">
                                        <div class="card">
                                            <div class="card-header text-center">
                                                <h4 class="card-title">@type.NomMaison</h4>
                                                <p class="text-center">@type.Descri</p>
                                            </div>
                                            <h4 class="price" style="margin-left: 2%;">Ar @type.formattedPrix</h4>
                                            @* <ul>
                                        <li><i class="bi bi-check-circle"></i></li>

                                        </ul> *@
                                            <div class="card-footer">

                                                <label for="">Choix</label>
                                                <input type="radio" name="id" value="@type.Idtypemaison">


                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="col-sm-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-1 mb-1 mt-4">Suite</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>
